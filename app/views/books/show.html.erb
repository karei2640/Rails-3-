<html>
  <head></head>
  <body>
    <%= flash[:notice] %>
    <main>
       <p id ="notice"></p>
      <div class= "container px-5 px-sm-0">
              <div class= "row">
      <div class ="col-md-3">
        <h1>User info</h1>
        <% if @user.profile_image? %>
             <%= image_tag @user.profile_image.url %>
             <% else %>
             <%= image_tag ("default-image.jpg") %>
          <% end %>
        <table class= "table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
         <div class ="row">
            <% @user.id == current_user.id %>
           <%= link_to  edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
            <strong><i class="fas fa-user-cog "></i></strong>
             <% end %>      
        </div>
          <%= form_with model: Book.new do |f| %>
           <h2 class="mt-3">New book</h2>
        <h4>Title</h4>
          <%= f.text_field :title %>
        <h4>Option</h4><br>
         <%= f.text_area :body %>
         <%= f.submit 'Create Book', class:'btn btn-sm btn-success'  %>
        </div>
          <% end %>

    <div class ="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class ="table">
        <tbody>
         <tr>
          
          <td><%= link_to user_path(@user.id) do %>
             <% if @user.profile_image? %>
             <%= image_tag @user.profile_image.url %>
             <% else %>
             <%= image_tag ("default-image.jpg") %>
         <% end %><br>
           <%= @user.name %>
           <% end %>
           </td>            
           <td><%= link_to  @book.title ,"/books/#{@book.id}"%></td>
           <td><%= @book.body %></td>
           <% if @user.id == current_user.id %>
           <td><%= link_to 'Edit', edit_book_path(@book),class:"btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete,class:"btn btn-sm btn-danger", data: { confirm: '本当に消しますか？' } %></td>
         </tr>
            <% end %>
        </tbody>
      </table>
    </main>  
   </body>
</html>